# Production Environment Variables Template
# Copy this to .env.production and fill with actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"
MONGO_URI="mongodb+srv://username:password@cluster.mongodb.net/my-fit-companion?retryWrites=true&w=majority"

# Security
JWT_SECRET="your-super-secure-256-bit-secret-key-for-production"

# Server Configuration  
PORT=5000
NODE_ENV=production

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS="https://yourapp.com,https://www.yourapp.com,https://mobile.yourapp.com"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH="/app/uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# External Services (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
